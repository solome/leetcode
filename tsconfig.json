
{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@leetcode/shared-utils/*": [ "./resources/shared-utils/*" ],
            "@leetcode/algorithms/*": [ "./resources/algorithms/*" ]
        }
    },
    "include": [
        "resources/**/*"
, "resources/algorithms/sort/.ts"    ]
}
